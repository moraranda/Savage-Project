<!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Edit Administrator</title>
            <link rel="website icon" type="png" href="..\photos\tiny-trademark.png">
            <link rel="stylesheet" href="/css/admin/edit-admin.css">
        </head>
        <body>
            <h1>EDIT ADMINISTRATORS</h1>
            <form action="/edit-administrator/<%= admin.AdministradorID %>" method="POST" class="container">
                <div class="form-group">
                    <input type="hidden" id="id" name="id" value="<%= admin.AdministradorID %>" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= admin.Email %>" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Enter new password">
                </div>
                <div class="form-group">
                    <label for="rol">Rol:</label>
                    <select id="rol" name="rol" required>
                        <option id="rol-value" value="Administrador">Administrator</option>
                        <option id="rol-value" value="Editor">Editor</option>
                        <option id="rol-value" value="Marketing">Marketing</option>
                    </select>
                </div>
                <div class="form-group button">
                    <button type="button" id="returnButton">Return</button>
                    <button type="submit">Save Changes</button>
                </div>
            </form>
            <script>
                document.getElementById('returnButton').addEventListener('click', function() {
                    window.history.back();
                });
            </script>
        </body>
    </html>